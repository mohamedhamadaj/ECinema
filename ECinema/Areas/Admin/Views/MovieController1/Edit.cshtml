@using ECinema.ViewModels
@model MovieVM

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Edit new Movie</h2>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                @* <input type="hidden" name="id" value="@Model.Id"> *@
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input class="form-control" name="Name" value="@Model.Movie!.Name">
                </div>
                <div class="mb-3">
                    <label for="Img" class="form-label">Img</label>
                    <input type="file" class="form-control" id="Img" name="Img" accept="image/*" onchange="previewImage(event)" value="@Model.Movie.MainImg">
                </div>

                <div class="mb-3">
                    <img id="preview"
                         src="~/images/@Model.Movie.MainImg"
                         alt="Current Image"
                         style="max-width: 200px; border:1px solid #ccc; padding:5px; border-radius:10px;" />
                </div>

                <div class="mb-3">
                    <label for="SubImgs" class="form-label">Sub Imgs</label>
                    <input type="file" class="form-control" id="SubImgs" name="SubImgs" accept="image/*" multiple>
                </div>

                @if(Model.Movie.MovieSubimages.Any())
                {
                    foreach (var item in Model.Movie.MovieSubimages)
                    {
                        <div class="mb-3" style="position:relative; display: inline-block">
                            <img id="preview"
                                 src="~/images/Movie_images/@item.Img"
                                 alt="Current Image"
                                 style="width: 150px; border:1px solid #ccc; padding:5px; border-radius:10px;" />

                                <a href="/Admin/Movie/DeleteSubImg?MovieId=@Model.Movie.Id&Img=@item.Img" id="addButtonColor" class="btn btn-sm btn-danger"
                                style="position: absolute; top: 5px; right: 5px">X</a>
                        </div>
                    }
                }

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Leave a description here" style="height: 100px" name="Description">@Model.Movie.Description</textarea>
                        <label for="description">You Description Here...</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="Price" class="form-label">Price</label>
                    <input class="form-control" name="Price" value="@Model.Movie.Price">
                </div>
               
                <div class="mb-3">
                    <label for="Quantity" class="form-label">Quantity</label>
                    <input class="form-control" name="Quantity" value="@Model.Movie.Actors">
                </div>
                
                <div class="mb-3">
                    <label for="CategoryId" class="form-label">Category</label>
                    @* <input class="form-control" name="CategoryId"> *@
                    <select name="CategoryId" class="form-select">
                        @foreach (var item in Model.Categories)
                        {
                            @if (item.Id == Model.Movie.CategoryId)
                            {
                                <option value="@item.Id" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="CinemaId" class="form-label">Cinema</label>

                    <select name="CinemaId" class="form-select">
                        @foreach (var item in Model.Cinemas)
                        {
                            @if (item.Id == Model.Movie.CinemaId)
                            {
                                <option value="@item.Id" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="status" class="form-label">Status</label>
                    <select name="Status" class="form-select">
                        @if (Model.Movie.Status)
                        {
                            <option value="true" selected>Active</option>
                            <option value="false">InActive</option>
                        }
                        else
                        {
                            <option value="true">Active</option>
                            <option value="false" selected>InActive</option>
                        }

                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

<script>
    function previewImage(event) {
        const input = event.target;
        const preview = document.getElementById("preview");

        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result; // الصورة الجديدة
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

</script>
